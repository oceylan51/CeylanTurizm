@model RegisterModel
<form asp-controller="Account" asp-action="Register" method="post">
    <div class="container-admin text-white">
        <div class="row" style="font-size:12pt !important;">
            <div class="col-md-6">
                <div class="w-75 d-flex justify-content-evenly align-items-center mt-3 m-auto">
                    <label class="w-25" asp-for="IdentityNumber">Tc No:</label>
                    <input style="font-size:10pt;" asp-for="IdentityNumber" class="form-control w-50" placeholder="Tc No Giriniz">
                </div>
                <div class="w-75 d-flex justify-content-evenly align-items-center mt-3 m-auto">
                    <label class="w-25" asp-for="FirstName">Ad:</label>
                    <input style="font-size:10pt;" asp-for="FirstName" class="form-control w-50" placeholder="Adınızı Girin">
                </div>
                <div class="w-75 d-flex justify-content-evenly align-items-center mt-3 m-auto">
                    <label class="w-25" asp-for="LastName">Soyad:</label>
                    <input style="font-size:10pt;" asp-for="LastName" class="form-control w-50" placeholder="Soyadınızı Girin">
                </div>
                <div class="w-75 d-flex justify-content-evenly align-items-center mt-3 m-auto">
                    <label class="w-25" asp-for="PhoneNumber">Tel No::</label>
                    <input style="font-size:10pt;" asp-for="PhoneNumber" class="form-control w-50" placeholder="Telefon Numaranızı Girin">
                </div>
                <div class="w-75 d-flex justify-content-evenly align-items-center mt-3 m-auto">
                    <label class="w-25" asp-for="Gender">Cinsiyet:</label>
                    <select style="font-size:10pt;" class="w-50 form-control" asp-for="Gender">
                        <option>Erkek</option>
                        <option>Kadın</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="w-75 d-flex justify-content-evenly align-items-center mt-3 m-auto">
                    <label class="w-25" asp-for="UserName">Kullanıcı Adınızı:</label>
                    <input style="font-size:10pt;" asp-for="UserName" class="form-control w-50" placeholder="Kullanıcı Adınızı Girin">
                </div>
                <div class="w-75 d-flex justify-content-evenly align-items-center mt-3 m-auto">
                    <label class="w-25" asp-for="Password">Şifre:</label>
                    <input style="font-size:10pt;" asp-for="Password" class="form-control w-50" placeholder="Şifrenizi Girin">
                </div>
                <div class="w-75 d-flex justify-content-evenly align-items-center mt-3 m-auto">
                    <label class="w-25" asp-for="RePassword">Şifre Tekrarı:</label>
                    <input style="font-size:10pt;" asp-for="RePassword" type="password" class="form-control w-50" placeholder="Şifrenizi Girin">
                </div>
                <div class="w-75 d-flex justify-content-evenly align-items-center mt-3 m-auto">
                    <label class="w-25" asp-for="Email">Email:</label>
                    <input style="font-size:10pt;" asp-for="Email" class="form-control w-50" placeholder="Email Girin">
                </div>
            </div>
        </div>
        <div class="w-50 d-flex justify-content-evenly align-items-center mt-5 m-auto">
            <input type="submit" class="btn btn-sm btn-outline-success m-auto w-50" />
        </div>
    </div>
</form>